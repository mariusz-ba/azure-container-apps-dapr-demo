{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "ServiceA": {
        "ClusterId": "ServiceA",
        "Match": {
          "Path": "service-a/{**catch-all}"
        },
        "Transforms": [{ "PathPattern": "{**catch-all}" }]
      },
      "ServiceB": {
        "ClusterId": "ServiceB",
        "Match": {
          "Path": "service-b/{**catch-all}"
        },
        "Transforms": [{ "PathPattern": "{**catch-all}" }]
      }
    },
    "Clusters": {
      "ServiceA": {
        "Destinations": {
          "Destination1": {
            "Address": "http://localhost:5010"
          }
        }
      },
      "ServiceB": {
        "Destinations": {
          "Destination1": {
            "Address": "http://localhost:5020"
          }
        }
      }
    }
  }
}
